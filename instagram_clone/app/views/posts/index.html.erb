<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @posts.any? %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.location %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
<% else %>
  <h1>No posts have been added yet, click below to add a new post.</h1>
<% end %>
</tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
