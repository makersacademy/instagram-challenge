<div class="bodycontainer"><% if @posts.any? %>
  <ul>
  <% @posts.each do |post| %>
  <li>
    <%= link_to post.name, post_path(post) %>
    <br>

    <% unless post.image.url(:medium) == '/images/medium/missing.png'%>
      <% a = AsciiArt.new(post.image.url(:medium)).to_ascii_art(width: 75, format: 'html') %>
      <div class="ascii"><%= a.to_s.html_safe %></div>
    <% end %>


    <br>
    <%= post.content %>
    <br>
    by <%=post.username%> @<%= post.created_at %>
      <% if post.comments.any? %>
      <br>
      <ul>
        <% post.comments.each do |comment| %>
          <li>
            <%= comment.thoughts %>
            <br>
            <%= comment.created_at %>
          </li>
        <% end %>
      </ul>
      <% end %>
  </li>
  <% end %>
</ul>
<% else %>
  No posts yet :-(
<% end %>
  <!-- probably will want to update new_post_path and pass it a user when we add users -->
  <%= link_to "add a post!", new_post_path %>
</div>