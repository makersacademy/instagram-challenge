<section class='row jumbotron'>
	<h1>What are you looking at?</h1>
	<%= link_to 'New post', new_post_path, class: 'btn' %>
</section>


<% if @posts.count > 0 %>

	<% @posts.each do |post| %>
		<%= link_to image_tag(post.image.url(:thumb)), post_path(post), id: "pic#{post.id}" %>
		<%= post.caption %>
		<%= post.likes.count %><%= ' like'.pluralize(post.likes.count) %>
		<%= link_to 'Like', post_likes_path(post), method: :post %>
		<p>Posted by <%= link_to post.user.email, user_path(post.user) %></p>

		<% if post.comments.any? %>
			<p>Comments:</p>
			<% post.comments.each do |comment| %>
				<%= comment.comment %>
				<%= link_to 'Delete comment', comment_path(comment), method: :delete %>
			<% end %>
		<% end %>

	<% end %>

<% else %>

	<p>No posts</p>

<% end %>

