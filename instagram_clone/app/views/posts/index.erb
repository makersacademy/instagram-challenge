<section class='row jumbotron'>
	<h1>What are you looking at?</h1>
	<%= link_to 'New post', new_post_path, class: 'btn' %>
</section>


<% if @posts.count > 0 %>

	<% @posts.each do |post| %>

		<div class='grid feed-row'>
			<section class='col-1-2 image'>
				<%= link_to image_tag(post.image.url(:medium)), post_path(post), id: "pic#{post.id}" %>
			</section><!--
			--><section class='col-1-2'>
				<h2><%= post.caption %></h2>
				<h3><%= post.likes.count %><%= ' like'.pluralize(post.likes.count) %><span> | <%= link_to 'Like', post_likes_path(post), method: :post %></span></h3>
				<p>Posted by <%= link_to post.user.email, user_path(post.user) %></p>
				<% if post.comments.any? %>
					<h4>Comments:</h4>
					<% post.comments.each do |comment| %>
						<p><%= comment.comment %></p>
						<p>from <%=comment.user.email%></p>
						<p><%= link_to 'Delete comment', comment_path(comment), method: :delete %></p>
					<% end %>
				<% end %>
			</section>
		</div>

	<% end %>

<% end %>

