<% @posts.each do |post| %>
	<%= link_to image_tag(post.image.url(:thumb)), post_path(post), id: "pic#{post.id}" %>
	<%= post.caption %>
	<p>Posted by <%= link_to post.user.email, user_path(post.user) %></p>
	<% if post.comments.any? %>
		<p>Comments:</p>
		<% post.comments.each do |comment| %>
			<%= comment.comment %>
			<%= link_to 'Delete comment', comment_path(comment), method: :delete %>
		<% end %>
	<% end %>
<% end %>

<%= link_to 'New post', new_post_path %>