<% if @users.count > 0 %>
	<% @users.each do |user| %>
		<div class='user-feed-row user-list'>
			<h2><%= link_to user.email, user_path(user) %><span>
			<% if current_user %>
				<% if user.followed_by?(current_user) %>
					<%= link_to 'Unfollow', "/users/#{user.id}/unfollow", method: :delete, class: 'btn btn-foll' %>
				<% else %>
					<%= link_to 'Follow', "/users/#{user.id}/follow", method: :post, class: 'btn btn-foll' %>
				<% end %>
			</span></h2>
			<% end %>
		</div>
	<% end %>
<% end %>