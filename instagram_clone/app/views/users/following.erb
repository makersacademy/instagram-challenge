<% if @users.count > 0 %>
	<% @users.each do |user| %>
		<%= link_to user.email, user_path(user) %>
		<% if user.followed_by?(current_user) %>
			<%= link_to 'Unfollow', "/users/#{user.id}/unfollow", method: :delete %>
		<% else %>
			<%= link_to 'Follow', "/users/#{user.id}/follow", method: :post %>
		<% end %>
	<% end %>
<% end %>