<div class="form-wrapper">
  <%= simple_form_for @photo, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :image %>
    </div>
    <div class="form-group text-center">
      <%= f.input :caption %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>

  <div class="text-center edit-links">
    <%= link_to "Delete", photo_path(@photo), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>
    |
    <%= link_to "Cancel", photos_path %>
  </div>
