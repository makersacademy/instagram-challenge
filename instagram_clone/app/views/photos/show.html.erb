<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        Kyaw Tun Sein
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @photo.image.url(:medium) %>
    </div>
    <p class="caption">
      <%= @photo.caption %>
    </p>
    <div class="text-center edit-links">
      <%= link_to "Back", photos_path %>
      |
      <%= link_to "Edit", edit_photo_path %>
    </div>
  </div>
</div>
