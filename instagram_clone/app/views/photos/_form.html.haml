= simple_form_for @photo, html: {multipart: true } do |f|
  - if @photo.errors.any?
    #errors
      %h2
      =pluralize(@photos.errors.count, "error")
      prevented this photo from saving
      %ul
        - @photo.errors.full_messages.each do |msg|
          %li= msg


  .form-group
    =f.input :image, input_html: { class: 'form-control', id: 'img-frm' }

  .form-group
    =f.input :title, input_html: { class: 'form-control', id: 'title-frm', value: 'Put your title here...' }

  .form-group
    =f.input :description, input_html: { class: 'form-control', id: 'description-frm', value: 'Put your description here...' }

  = f.button :submit, class: "btn", id: 'form-submit'
