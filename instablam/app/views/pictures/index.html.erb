<div class="main-container">
  <% @pictures.each do |picture| %>
    <div class="picture-container">
      <a href="<%= "#{picture_path(picture)}"%>">
        <div id="image-container">
          <img src="<%= picture.image %>" alt="<%= picture.title %>" class="picture-image">
          <p class="likes-count"><%= pluralize(picture.likes.count, "like") %></p>
        </div>
      </a>
    </div>
  <% end %>
</div>
