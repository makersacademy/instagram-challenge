<!DOCTYPE html>
<html>
  <head>
    <title>InstaClone</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/"> The InstaClone </a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/posts"> InstaClone </a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="notice">
            <% if notice %>
            <div class="alert alert-info fade in" role="alert">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <ul id='notice'>
                    <li><%= notice %></li>
                </ul>
            </div>
            <% end %>
        </div>

        <div class="errors">
            <% if alert %>
            <div class="alert alert-danger fade in" role="alert">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <ul id='errors'>
                    <li><%= alert %></li>
                </ul>
            </div>
            <% end %>
        </div>



<div class="yield_container">
  <div class="user_signed_in">
  <% if user_signed_in? %>
  <br>
      Welcome <%= current_user.email %><br>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path %>
      <%= link_to "Sign up", new_user_registration_path %>
    <% end %>
  </div>
  <%= yield %>
</div>

  <footer class="footer">
            Â© 2017 Copyright by Gurminder Bhachu |
            <a href="https://github.com/gbhachu" target="_blank">GitHub</a>


        </footer>


  </body>
</html>
