<% if @posts.any? %>
<% @posts.reverse.each do |post| %>
<h2><%= post.name %></h2>
<div>
    <%= link_to post.name, post_path(post) %>
</div>
<div>
    <%= image_tag post.image.url(:thumb) %>
</div>
<div>
    <%= link_to 'Edit', edit_post_path(post) %>
</div>
<div>
    <%= link_to 'Delete', post_path(post), method: :delete %>
</div>
<% end %>
<% else %>
<h1>No posts yet</h1>
<% end %>

<a href="/posts/new">Add a post</a>
