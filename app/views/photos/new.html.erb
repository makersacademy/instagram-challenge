<%= form_for @photo, :html => { :multipart => true }  do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <%= f.label :image, "Image" %>
  <%= f.file_field :image %>
  <%= f.submit 'Add photo' %>
<% end %>

