<h1>
  <%= @photo.title %>
</h1>
<br>
  <%= image_tag @photo.image.url(:medium) %>
<h3>
  <%= link_to "Add Comment", new_photo_comment_path(@photo) %>
<br>
<h3>
  <% if @photo.comments.any? %>
    <% @photo.comments.order('created_at DESC').each do |comment| %>
    <br>
</h3>
    <h4>
        <%= time_ago_in_words(comment.created_at) + ' ' + "ago" %>
    </h4>
  <h3>
        <%= comment.comment %>
    <br>
    <% end %>
  <% end %>
</h3>
</h3>
