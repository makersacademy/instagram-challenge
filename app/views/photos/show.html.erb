<h1>Show</h1>
<div></div>
<%= image_tag @photo.image(:medium) %>


  <%= button_to 'Delete Photo', @photo,
      method: :delete,
      data: { confirm: 'Are you sure you want to delete this photo?' } %>

<%= @photo.description %>
<button> <%= @photo.likes%> </button>
<div>
  <h2>Comments</h2>
  <% @photo.comments.each do |comment| %>
    <%= comment.body %>
  <% end %>
</div>

</div>


<div>
  <h1>Added a Comment</h1>

  <%= form_with(model: [ @photo, @photo.comments.build ]) do |form| %>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>