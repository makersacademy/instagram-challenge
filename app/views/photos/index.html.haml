%h3=link_to  "Upload Image", new_photo_path

- if @photos.any?
  - @photos.each do |photo|
    %h2
      = link_to photo.name, photo_path(photo)
      %h4= link_to '@'.html_safe + photo.user.username, user_photos_path(photo.user)
      
    %p
      = link_to photo_path(photo) do
        = image_tag photo.image.url(:medium)
    
    
    %p
      = link_to "Like", photo_likes_path(photo), method: :post
      = pluralize photo.likes.count, 'like'
    
    %h4
      = link_to '@'.html_safe + photo.user.username, user_photos_path(photo.user)
      = photo.description
    %h4= link_to "Leave a Comment", new_photo_comment_path(photo)
    
    %h4 
      Comments for
      = photo.name
    - if photo.comments.any?
      %ul
        - photo.comments.each do |comment|
          %li
            = link_to '@'.html_safe + comment.user.username, user_photos_path(photo.user)
            = comment.thoughts
    - else
      %p No comments 

    
- else 
  %h1 No photos yet!