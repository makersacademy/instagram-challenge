
<% if @photos.any? %>
  <% @photos.each do |photo| %>
    <h2><%= link_to photo.description, photo_path(photo) %></h2>
    <p><%= link_to "Edit #{photo.description}", edit_photo_path(photo) %></p>

  <% end %>
<% else %>
  <h2>No photos uploaded yet</h2>
  <br></br>
<% end %>

<a href="/photos/new">Add photo</a>
