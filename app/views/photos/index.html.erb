<% require_relative '../time_helper' %>

<head>
 <meta charset='utf-8'>
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col">
      </div>
      <div class="col">
      </div>
    </div>
    <div class="row">
      <div class="col">
      </div>
      <div class="col">
        <h3>All posts</h3>
        <% @photos.each do |photo| %>
            <%= image_tag(photo.image, style:"object-fit:cover; width: 250px; height: 250px;") if photo.image.attached?%>
            <br>
            <strong>
              <%= photo.user.name %>
            </strong> -
            <%= photo.caption %>
            <br>
            <%= time_since_post(photo) %>
            <br><br>
            <%= button_to 'Show/Comment', photo_path(photo), method: :get, type: "button", class: "btn btn-dark" %>
            <br>
            <%= button_to "Like", photo_likes_url(photo), method: :post, type: "button", class: "btn btn-dark"  %>
            <br>
        <% end %>
      </div>
      <div class="col">
      </div>
    </div>
  </div>
</body>
