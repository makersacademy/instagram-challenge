<% if @photos.any? %>

  <div class="row">
    <% @photos.each do |photo| %>
      <div class="col-md-6 col-md-offset-3">
        <div class="thumbnail">
          <a id="photo_link" href="<%= photo_path(photo) %>">
            <%= image_tag photo.image.url %>
          </a>
          <div class="caption">
            <p><%= photo.description %></p>

            <div class="btn-group btn-group-sm" role="group" aria-label="...">
              <%= link_to "Edit Photo", edit_photo_path(photo), :class => 'btn btn-default' %>
              <%= link_to "Delete Photo", photo_path(photo), method: :delete, :class => 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% else %>
  <h1>No photos yet</h1>
<% end %>

<center>
  <%= link_to "Add Photo", new_photo_path, :class => 'btn btn-primary btn-lg' %>
</center>
