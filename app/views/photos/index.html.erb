<% if @photos.any? %>
  <% @photos.each do |photo| %>
    <h2><%= link_to photo.descr, photo_path(photo) %></h2>
    <%= link_to "Edit #{photo.descr}", edit_photo_path(photo) %>
    <%= link_to "Delete #{photo.descr}", photo_path(photo), method: :delete %>
  <% end %>
<% else %>
  <h1>No photos yet</h1>
<% end %>

<%= link_to 'Add a photo', new_photo_path %>