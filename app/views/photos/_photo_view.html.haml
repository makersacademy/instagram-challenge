.photo-container
  = link_to image_tag(photo.photo_url, class: 'img-responsive'), photo_path(photo), id: photo.id
  %br/
  = link_to 'Like', photo_likes_path(photo), method: :post, class: 'btn btn-xs btn-primary like-button'
  %span(class='text-primary photo-likes')
    %b= photo.likes.count
    = "like".pluralize(photo.likes.count)
  = render 'photos/photo_actions', { photo: photo }
  %br/
  %b= link_to '@' + photo.user.username, feed_path(photo.user)
  = photo.description
