<%= flash[:sign_in_failure] %>
<%= flash[:sign_out_success] %>
<%= flash[:post_failure_sign_in] %>

<% provide(:title, 'Sign In') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign In" %>
    <% end %>
  </div>
</div>
