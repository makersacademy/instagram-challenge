

  <%= form_for(:session, url: login_path) do |form| %>
      <div class="container">
        <div class="post">
          <div class="post-header">
            <div class="user-image">
              <i class="far fa-user-circle fa-2x"></i>
            </div><div class="user-name">
                <h2>Login</h2>
            </div><div class="date">
            </div>
          </div>
          <div class="picture">
            <div class="box">
              <div class="user-details">
                <%= form.label :email %>
                <%= form.email_field :email, placeholder: "Enter email..." %><br>
                <%= form.label :password %>
                <%= form.password_field :password, placeholder: "Enter password..." %><br>
                Not already registered? <%= link_to "Sign Up", signup_path, class: "header-menu-item" %>
              </div>
            </div>
          </div>


          <div class="menu-bar">


            <div class="menu">
              <i class="far fa-heart"></i>
              <i class="far fa-comment"></i>
            </div><div class="submit-button">
              <%= button_tag type: 'submit' do %>
                <span class="far fa-paper-plane fa-2x"></span>
              <% end %>
            </div>
          </div>

        </div>
      </div>
  <% end %>
