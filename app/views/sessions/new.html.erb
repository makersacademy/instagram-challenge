<h2> log in </h2>
<%= form_with(url: login_path, scope: :session, local: true) do |form| %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag :Login %>
  </div>
<% end %>
