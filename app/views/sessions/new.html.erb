<h1>Sign In</h1>

<div class='row'>
  <div class='col-md-6'>

<%= form_tag sessions_path do %>
  Email: <%= text_field_tag :email, nil, class: 'form-control'  %>
  Password: <%= password_field_tag :password, nil, class: 'form-control' %>
  <br>
  <%= submit_tag "Submit", class: 'btn btn-success' %>
<% end %>

  </div>
</div>
