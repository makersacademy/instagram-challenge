= form_for @photograph, html: {multipart: true} do |f|
  = f.file_field :image
  = f.label :caption, "Say something about your photo"
  = f.text_field :caption
  - if current_page?(new_photograph_path)
    = f.submit "Post Photo", class: "button_styled"
  - else
    = f.submit "Update Post", class: "button_styled"
