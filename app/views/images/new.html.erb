<header class='center-block'>
  <h1>Contribute to beauty...or anything really.</h1>
</header>

<div class='center-block row bg-primary'>
  <div class='col-lg-6 col-lg-offset-3 text-center'>
  <div class='form group'>
    <%= bootstrap_form_for @image, html: {multipart: true} do |f| %>
      
      <%= f.text_field :title %>
      <%= f.file_field :image %>
      <%= f.fields_for @comment do |form| %>
        <%= form.text_area :thoughts %>
        <% end %>
      <%= f.submit %>
      
      <% end %>
    </div>
  </div>
</div>