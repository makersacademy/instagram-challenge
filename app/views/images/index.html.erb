<%= link_to 'Add an image', new_image_path %>
<% if @image.any? %>
  <% @image.each do |image| %>
    <h2> <%= image.description %> </h2>
    <%= link_to image.description, image_path(image) %>
    <%= link_to (image_tag (image.avatar.url(:medium))), image_path(image) %>
    <%= link_to "View image info", image_path(image) %>
    <%= link_to "Edit description", edit_image_path(image) %>
    <%= link_to "Delete image", image_path(image), method: :delete %>
    <%= link_to "Love", new_image_like_path(image) %>
    <%= "Loves: #{image.likes.count}" %>
    <%= link_to "Add comment", new_image_comment_path(image) %>
  <% end %>
<% else %>
  No images yet
<% end %>
