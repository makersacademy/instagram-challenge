<% if @images.any? %>
  <% @images.each do |image| %>
    <h2><%= link_to image.title, image_path(image) %></h2>
    <h3><%= link_to "Edit Post", edit_image_path(image) %></h3>
    <h3><%= link_to "Delete Post", image_path(image), method: :delete %></h3>
  <% end %>
<% else %>
  <h1>No images uploaded yet</h1>
<% end %>

