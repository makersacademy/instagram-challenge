<h1><%= @image.description %></h1>
  <%= image_tag(@image.picture.url(:large), class: 'uploaded-pic large') %>
  <div class="creator_and_likes">
    <p>Created by <%= link_to @creator_handle, user_path(@image.user_id) %></p>
    <p id="likes"><%= link_to '&#x1F44D;'.html_safe, image_path(@image), method: :patch %><%=  @likes %></p>
  </div>

  <% if @image.get_tags.any? %>
    <% @image.get_tags.each do |tag| %>
      <%= link_to tag[1], tag_path(tag[0].id) %>
    <% end %>
  <% end %>

  <%= form_for @tag do |f| %>
    <%= f.text_field :name %>
    <%= hidden_field_tag :image_id, @image.id %>
    <%= f.submit %>
  <% end %>

  <% if @image.show_comments.any? %>
  <div class="comments">
    <ul>
      <% @image.show_comments.each do |comment| %>
      <li><%= link_to comment.say, user_path(comment.user_id) %><%= link_to '&#x2421;'.html_safe, image_comment_path(@image, comment), method: :delete, id: "delete_comment_#{comment.id}" %></li>
    <% end %>
  </ul>
 </div>
  <% end %>

  <%= form_for [@image, @comment] do |f| %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end %>
