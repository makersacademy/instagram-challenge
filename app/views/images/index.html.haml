- if @images.any?
  - @images.each do |image|
    %a{:href => image_path(image)}
      %img{:src => image.image.url(:thumb), :id =>image.id}
      %p
      =image.title
      %p
    -# %p= pluralize image.likes.count, 'like'
    = link_to "Like Image", image_likes_path(image), class: 'likes-link'
    %span.likes_count= image.likes.count
    = 'like'.pluralize image.likes.count
    %p= link_to "Delete Image", image_path(image), method: :delete
    %br
- else
  No Images Yet!
%br
