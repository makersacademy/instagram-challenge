%ul{id: "image_#{image.id}_comments", class: 'comments-list'}
  - if image.comments.any?
    - image.comments.each do |comment|
      %li
        %span.user-name= "#{comment.user.user_name}: "
        = comment.text
  - else
    %p.text-center.no-comments-message No comments yet!
%hr
- if current_user
  = form_tag('#', method: 'get', class: 'new-comment-form') do
    .form-group.row.no-gutters
      = text_field_tag(:comment_text, 'Type a comment hereâ€¦', class: 'd-inline form-control new-comment-field px-1')
      = link_to('Post', image_comments_path(image), class: 'd-inline btn-primary add-new-comment')
