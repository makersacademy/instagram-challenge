<div id="clearance" class="password-reset login-form centered">
  <h2 class='brand-font'><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="text-field">
      <%= form.label :email %>
      <%= form.text_field :email, type: 'email', class: 'small-input' %>
    </div>

    <div class="submit-field">
      <%= form.submit class: 'clear-btn reset-btn' %>
    </div>
  <% end %>
</div>
