<div class="container" align="center">
<div class="form-control">
<h2>Sign in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.text_field :login, placeholder: "user name*", autofocus: true%>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "password*", autofocus: true, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>
</div>
</div>

<%= render "devise/shared/links" %>
