<h2>Sign up</h2>

<body>
  <span id="root">
    <section class="section-all">
      <!-- 1-Role Main -->
      <main class="main" role="main">
        <div class="wrapper">
          <article class="article">
            <div class="content">
              <div class="login-box">
                <div class="header">
                  <img class="logo" src="/images/logo.jpg" alt="Rosstagram" />
                </div>
                <!-- Header end -->
                <div class="form-wrap">
                <form class="simple_form new_user" id="new_user" novalidate="novalidate" action="/users" accept-charset="UTF-8" method="post"><input type="hidden" name="authenticity_token" value="eBI2wIFIBb95USlzL-BiSwoI_FAvKxT5ziUOt1Hbb3YUyfmNMHj6K6nQ_NZdXzCaNU54sYN2EFGeVvD8UvR51w">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                      <div class="input-box">
                        <input
                          type="email"
                          id="user_email"
                          aria-describedby=""
                          placeholder="Email"
                          aria-required="true"
                          maxlength="30"
                          autocapitalize="off"
                          autocorrect="off"
                          name="user[email]"
                          value=""
                          required
                        />
                      </div>
                      <div class="input-box">
                        <input
                          type="text"
                          id="user_full_name"
                          aria-describedby=""
                          placeholder="Full Name"
                          aria-required="true"
                          maxlength="30"
                          autocapitalize="off"
                          autocorrect="off"
                          name="user[full_name]"
                          value=""
                          required
                        />
                      </div>
                      <div class="input-box">
                        <input
                          type="text"
                          id="user_username"
                          aria-describedby=""
                          placeholder="Username"
                          aria-required="true"
                          maxlength="30"
                          autocapitalize="off"
                          autocorrect="off"
                          name="user[username]"
                          value=""
                          required
                        />
                      </div>
                      <div class="input-box">
                        <input
                          type="password"
                          name="user[password]"
                          id="user_password"
                          placeholder="Password"
                          aria-describedby=""
                          maxlength="30"
                          aria-required="true"
                          autocapitalize="off"
                          autocorrect="off"
                          required
                        />
                      </div>
                      <div class="input-box">
                        <input
                          type="password"
                          name="user[password_confirmation]"
                          id="user_password_confirmation"
                          placeholder="Password Confirmation"
                          aria-describedby=""
                          maxlength="30"
                          aria-required="true"
                          autocapitalize="off"
                          autocorrect="off"
                          required
                        />
                      </div>
                      <span class="button-box">
                      <button class="btn" type="submit" name="submit">Sign up</button>
                    </span>  
                  </form>
                  <div class="policy">
                  By signing up, you agree to our Terms . Learn how we collect, use and share your data in our Data Policy and how we use cookies and similar technology in our Cookies Policy .
               </div>
                </div> <!-- Form-wrap end -->
              </div> <!-- Login-box end -->

              <div class="login-box">
                <p class="text">Have an account?<%= link_to 'Log in', new_user_session_path %></p>
              </div>
              <div class="app">
                <p>Get the app.</p>
                <div class="app-img">
                  <a href="#">
                    <img
                      src="https://www.instagram.com/static/images/appstore-install-badges/badge_ios_english-en.png/4b70f6fae447.png"
                    />
                  </a>
                  <a href="#">
                    <img
                      src="https://www.instagram.com/static/images/appstore-install-badges/badge_android_english-en.png/f06b908907d5.png"
                    />
                  </a>
                </div>
                <!-- App-img end-->
              </div>
              <!-- App end -->
            </div>
            <!-- Content end -->
          </article>
        </div>
        <!-- Wrapper end -->
      </main>
      </div>
      <!-- 2-Role Footer -->
      <footer class="footer" role="contentinfo">
        <div class="footer-container">
          <nav class="footer-nav" role="navigation">
            <ul>
              <li><a href="">About Us</a></li>
              <li><a href="">Support</a></li>
              <li><a href="">Blog</a></li>
              <li><a href="">Press</a></li>
              <li><a href="">Api</a></li>
              <li><a href="">Jobs</a></li>
              <li><a href="">Privacy</a></li>
              <li><a href="">Terms</a></li>
              <li><a href="">Directory</a></li>
              <li>
                <span class="language"
                  >Language
                  <select
                    name="language"
                    class="select"
                    onchange="la(this.value)"
                  >
                    <option value="#">English</option>
                    <option value="http://ru-instafollow.bitballoon.com">
                      Russian
                    </option>
                  </select>
                </span>
              </li>
            </ul>
          </nav>

          <span class="footer-logo">&copy; 2021 Rosstagram</span>
        </div>
        <!-- Footer container end -->
      </footer>
    </section>
  </span>
  <!-- Root -->

  <!-- Select Link -->
  <script type="text/javascript">
    function la(src) {
      window.location = src;
    }
  </script>
</body>



