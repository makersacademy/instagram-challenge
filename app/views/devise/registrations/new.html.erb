<body class="devise">
  <div class="sign-up">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'text-field' %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, class: 'text-field' %>
      </div>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: 'text-field' %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'text-field' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'text-field' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'text-field' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'submit-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</body>
