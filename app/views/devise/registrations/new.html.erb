<div class="container">
  <div class="row">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <fieldset class="form-group">
        <div class="form-group">
          <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-sm-2 col-form-label" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", 'aria-describedby': "passwordHelpBlock", placeholder: "Password" %>
          <p id="passwordHelpBlock" class="form-text text-muted">
            <% if @minimum_password_length %>
            Your password must be at least <%= @minimum_password_length %> characters long.
            <% end %>
          </p>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-sm-4 col-form-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", 'aria-describedby': "passwordConfHelpBlock", placeholder: "Password confirmation" %>
          <p id="passwordConfHelpBlock" class="form-text text-muted">
            Password confirmation must be equal to the password.
          </p>
        </div>
      </fieldset>


      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
