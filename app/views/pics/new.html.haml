= form_for @moment, html: {multipart: true} do |f|
  = f.label :title
  = f.text_field :title
  = f.file_field :image
  = f.submit "Create Moment"

- if @moment.errors.any?
  %section#errors
    %h2
      = pluralize @moment.errors.count, "error"
      prohibited this picture from being saved:
    %ul
      - @moment.errors.full_messages.each do |message|
        %li= message
