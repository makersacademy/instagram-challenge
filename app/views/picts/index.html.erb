<h1>The Marvelous Picts Feed! </h1>

<%= link_to 'New Pict',  new_pict_path %>

<% @picts.each do |pict| %>

 <h2> <%= pict.title %> <h2>
  <h2> Creator: <%= User.find(pict.user_id).user_name %> <h2>

  <%= image_tag(pict.image) %>
 <%= link_to 'Edit Pict', edit_pict_path(pict) %>
 <%= link_to 'Destroy Pict', pict_path(pict), method: :delete %>
 <%= link_to 'Have a go', pict_path(pict) %>

<% end %>
