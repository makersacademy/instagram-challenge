<p id="notice"><%= notice %></p>

<h1>Bamposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bamposts.each do |bampost| %>
      <tr>
        <td><%= bampost.content %></td>
        <td><%= bampost.user_id %></td>
        <td><%= link_to 'Show', bampost %></td>
        <td><%= link_to 'Edit', edit_bampost_path(bampost) %></td>
        <td><%= link_to 'Destroy', bampost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bampost', new_bampost_path %>
