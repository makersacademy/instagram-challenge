    <hr class="my-4">
    <p>Click on sign up to create your account.</p>
    <% if !current_user %>
    <p class="lead">
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-primary btn-lg" %>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-primary btn-lg" %>
    <% else %>
      <%= link_to "LATEST PHOTOS", posts_path, class: "btn btn-outline-primary btn-lg" %>
    <% end %>
    </p>
  </div>
  <div style="opacity: 0.9;" class="bg-primary">
