<h1>kinstagram</h1>
<p>to share your pics with your kin</p>
<% if Current.user %>
    Hi <%= Current.user.email %><br>
      <%= form_for Post.new do |f| %>
      <div class="form-group">
        <%= f.text_field :description %>
      </div>
      <div class="form-group">
        <%= f.file_field :image %>
      </div>
      <div class="form-group">
        <%= f.text_field :user_id, value: Current.user.email, class:'d-none'%>
      </div>
      <br>
      <div class="text-center">
        <%= f.submit 'Create Post', class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= button_to 'Logout', logout_path, method: :delete %>
    <% else %>
    <%= link_to 'Sign Up', sign_up_path %>
    or
    <%= link_to 'Login', sign_in_path %>
  <% end %>

  <div class="posts">
    <% @posts.each do |post| %>
      <section class="post">
      <!-- post view -->
      </section>
    <% end %>
  </div>