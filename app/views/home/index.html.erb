<div class="homepage">
  <div class='form-upload'>
    <%= render 'upload_form' %>
  </div>

<div class="posts">
  <% @posts.each do |post| %>
  <section class="post">

    <div class="user">
      <div class="avatar">
        <img src="user_avatar.jpg">
      </div>
      <div class="username">
        <%= post.user.username %>
      </div>
    </div>
    <%= image_tag post.image, class: 'main-image' %>
    <div class="description">
      <%= post.description %>
    </div>

  </section>
  <% end %>
</div>
</div>
