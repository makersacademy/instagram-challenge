<% if user_signed_in? %>
<h4><%= link_to "My Photos", photos_path %></h4>
<% end %>
<% if @photos.count == 0 %>
  <h3>No photos available</h3>  
<% else %>
  <% @photos.each do |photo| %>
    <a href="/photos/<%= photo.id %>" id="<%= photo.id %>"><%= image_tag photo.image(:medium) %></a>
  <% end %>
<% end %>