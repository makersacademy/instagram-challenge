        <% else %>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to new_user_session_path, { :class => "dropdown-item" } do %>
              <%= fa_icon "sign-in" %> Login
            <% end %>
