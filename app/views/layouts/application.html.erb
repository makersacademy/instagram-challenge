<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>InstagramChallenge</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class='navbar navbar-inverse'>
      <div class='container'>
        <div class='navbar-header'>
          <h1>Instagram Challenge</h1>
        </div>
        <div id='navbar' class='nav navbar-right'>
          <ul class='nav navbar-nav'>
            <% if user_signed_in? %>
            <li><%= link_to 'Posts', root_path %></li>
            <li><%= link_to 'New Post', new_post_path %></li>
            <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
            <% else %>
            <%= link_to 'Sign in', new_user_session_path, class: 'navbar-brand'%>
            <%= link_to 'Sign up', new_user_registration_path, class: 'navbar-brand'%>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

  </body>
  <div class='container'>
    <div class="notice"><%= notice %></div>
    <div class="alert"><%= alert %></div>
  </div>
</html>
