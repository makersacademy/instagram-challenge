<!DOCTYPE html>
<html>
<head>
  <title>Outstagram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://use.typekit.net/ctz7lpf.js"></script>
  <script>try{Typekit.load({ async: true });}catch(e){}</script>
  <%= csrf_meta_tags %>
</head>
<body>

  <header id="masthead">
    <div class="row">
      <div class="small-12 columns">
        <h1 id="site-title">
            insta
        </h1>
        <nav id="main-nav">

          <%= link_to "Home", posts_path %><span class="sep"> | </span>

          <% if user_signed_in? %>
          <%= link_to "Add a post", new_post_path %><span class="sep"> | </span>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
          <% else %>
          <%= link_to "Sign in", new_user_session_path %><span class="sep"> | </span>
          <%= link_to "Sign up", new_user_registration_path %>
          <% end %>

        </nav>
      </div>
    </row>
  </header>


<%= notice %>
<%= yield %>

</body>
</html>
