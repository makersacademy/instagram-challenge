<!DOCTYPE html>
<html>
<head>
  <title>Instapix</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%if !current_user %>
  <%= link_to("Log In", new_user_session_path, controller: 'users/sessions', action: 'new') %>
  <%= link_to("Sign Up", new_user_registration_path, controller: 'devise/registrations', action: 'new') %>
<% else %>
  <%= link_to("Edit Profile", edit_user_registration_path, controller: 'devise/registrations', action: 'edit') %>
  <%= link_to("Log Out", destroy_user_session_path, controller: 'users/sessions', method: 'delete') %>
<% end %>

<%= yield %>

</body>
</html>
