<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <% if user_signed_in? %>
          <%= current_user.email %>
          <button type="button" class="btn btn-default"><i class="fa fa-sign-out fa-fw"></i><%= link_to "Sign out", destroy_user_session_path, method: :delete %></button>
        <% else %>
          <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default"><i class="fa fa-sign-in fa-fw"></i><%= link_to "Sign in", new_user_session_path %></button>
            <button type="button" class="btn btn-default"><i class="fa fa-user fa-fw"></i><%= link_to "Sign up", new_user_registration_path %></button>
          </div>
        <% end %>
        </div>
      </nav>

        <%= yield %>

  </body>
</html>
