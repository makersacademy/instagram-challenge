= image_tag  @moment.image.url(:medium)
= @moment.description
= link_to "Delete", moment_path(@moment), method: :delete
= form_for [@moment, @comment] do |f|
  = f.text_field :comment
  = f.submit "Comment"
- if @moment.comments.any?
  - @moment.comments.each do |comment|
    %h3
      = comment.user.email + ":" + comment.comment

