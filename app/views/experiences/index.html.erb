<% if @experiences.any? %>
  <% @experiences.each do |experience| %>
    <div class='experience'>
      <%= experience.user.username %>
      <a href="<%= experience_path(experience) %>">
        <div class='experience-image'> <%= image_tag experience.image.url(:medium) %> </div>
      </a>
      <%= experience.description %>
      <!-- <%= form_for [experience, @comment] do |f| %>
        <%= f.label :comment %>
        <%= f.text_field :comment %>
        <%= f.submit 'Leave comment' %>
      <% end %> -->
    </div>
  <% end %>
<% else %>
  <p>No experiences yet</p>
<% end %>

<% if user_signed_in? %>
  <p><%= link_to "Share an experience", new_experience_path %></p>
<% end %>
