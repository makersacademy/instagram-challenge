<h1>Sign Up</h1>

<%= form_with model: @user, url: sign_up_path do |form| %>

    <% if @user.errors.any? %>
    <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>
    <% end %>
    <div class="mb-3">
        <%= form.label :email, 'Email' %>
        <%= form.text_field :email, class: 'form-control', placeholder: 'idi@amin.com' %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control', placeholder: 'despotsRus' %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation, 'Re-type your password' %>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="mb-3">
        <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
    </div>
<% end %>