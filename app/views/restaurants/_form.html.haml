-if @restaurant.errors.any?
  %h2= pluralize(@restaurant.errors.count, 'error')
  %ul
    -@restaurant.errors.full_messages.each do |message|
      %li=message
=form_for @restaurant do |f|
  =f.label :name
  =f.text_field :name
  =f.label :description
  =f.text_field :description
  =f.submit 'Submit restaurant'
