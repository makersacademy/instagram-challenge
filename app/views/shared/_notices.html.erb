<% if notice %>
  <div class="toast align-items-center" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute">
  <div class="d-flex">
    <div class="toast-body">
      <%= notice %>
   </div>
    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>
<% end %>
