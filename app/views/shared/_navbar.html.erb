<header>


  <nav class="navbar navbar-default">
      <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/posts">Hipstagram</a>
       </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
       <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <% if current_user != nil %>
              <li class="active"><a href="/posts">Newsfeed<span class="sr-only">(current)</span></a></li>
              <li>Profile</li>
              <form class="navbar-form navbar-left" method="GET" action="/posts/new">
                <li><%= button_to 'Post a picture', new_post_path, method: :get, class: 'btn btn-default'  %></li>
              </form>
            <% end %>
         </ul>

         <ul class="nav navbar-nav navbar-right">
           <% if signed_in? %>
             <li><a href="#"> Signed in as: <%= current_user.email %></a>  </li>
              <form class="navbar-form navbar-right" method="POST" action="/sign_out">
                <li>  <%= button_to 'Sign out', sign_out_path, method: :delete, class: 'btn btn-default'  %> </li>
              </form>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->

     </div><!-- /.container-fluid -->
