- if @picture.errors.any?
  %section#errors
    %h2
      = pluralize @picture.errors.count, "error"
    %ul
      - @picture.errors.full_messages.each do |message|
        %li= message

= form_for @picture, html: {multipart: true} do |f|
  = f.label :title
  = f.text_field :title
  %p= f.file_field :image
  %p= f.submit "Post"
