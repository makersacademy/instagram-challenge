<%= image_tag @picture.image.url(:medium), alt: @picture.caption %>
<%= @picture.caption %>
<% if current_user && @picture.user_id == current_user.id %>
  <%= link_to 'Edit', edit_picture_path(@picture) %>
  <%= link_to 'Delete', picture_path(@picture), method: :delete %>
<% end %>

<% if @picture.comments.any? %>
  <ul>
    <% @picture.comments.each do |comment| %>
      <li>
        <%= comment.thoughts %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No comments</p>
<% end %>

<%= link_to 'Comment', new_picture_comment_path(@picture) %>