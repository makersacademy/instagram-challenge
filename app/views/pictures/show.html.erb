<p>
  Name: <%= @picture.name %>
  <%= link_to "Edit Picture", edit_picture_path(@picture) %>
  <%= link_to "Delete Picture", picture_path(@picture), method: :delete %>


</p>

<% if @picture.liked_by(user) %>
delete like
<% else %>
  <p> <%= link_to 'Like', picture_likes_path(@picture), method: :post %> </p>
<% end %>

<% if @picture.likes.any? %>
<p>
  <%= pluralize(@picture.likes.size, 'like') %>
</p>
<p> <%= link_to pluralize(@picture.likes.size, 'like'), id: 'likes', picture_like_path(@picture, @like), method: :delete %> </p>
<% end %>

<p> <%= @picture.description %> </p>

<p> Comments: </p>

<% if @picture.comments.any? %>
  <% @picture.comments.each do |comment| %>
    <p> <%= comment.comment %> </p>
    <p> <%= link_to 'Edit comment', edit_picture_comment_path(@picture, comment) %> </p>
    <p> <%= link_to 'Delete comment', picture_comment_path(@picture, comment), method: :delete %> </p>
  <% end %>

<% else %>

<p> No comments </p>

<% end %>

<%= form_for [@picture, @picture.comments.build], url: picture_comments_path(@picture), method: :post do |f| %>

  <p> <%= f.label :comment %> </p>
  <p> <%= f.text_area :comment %> </p>
  <p> <%= f.submit 'Leave comment' %> </p>


<% end %>
