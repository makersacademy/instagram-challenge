<% if @pictures.any? %>
  <% @pictures.each do |picture| %>
    <div><%= image_tag picture.image.url(:thumb) %></div>
    <div><h2><%= link_to picture.name, picture_path(picture) %></h2></div>
    <div><%= link_to "Like Picture", picture_likes_path(picture), class: 'likes-link' %>
     <span class="likes_count"> <%= picture.likes.count %> </span> <%= 'likes'.pluralize(picture.likes.count) %></div>
    <div><%= link_to "Add A Comment #{picture.name}", new_picture_comment_path(picture) %> </div>
    <div> <%= link_to "Edit #{picture.name}", edit_picture_path(picture) %>
      <%= link_to "Delete #{picture.name}", picture_path(picture), method: :delete %></div>
    <h3>Comments for <%= picture.name %></h3>
    <% if picture.comments.any? %>
      <ul>
        <% picture.comments.each do |comment| %>
          <li>
            <%= comment.comment %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No comments.</p>
    <% end %>
  <% end %>
<% else %>
  No pictures yet
<% end %>
<div><h2><a href='pictures/new'>Add A Picture</a></h2></div>