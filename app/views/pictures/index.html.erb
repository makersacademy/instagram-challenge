<% if @pictures.any? %>
  <% @pictures.each do |picture| %>
    <h2><%= link_to picture.title, picture_path(picture) %></h2>
    <% unless picture.image_url.nil? %>
    	<%= image_tag picture.image_url %><br>
    <% end %>
  <% end %>
<% else %>
  <h1>No pictures yet</h1>
<% end %>

<a href="/pictures/new">Upload a picture</a>