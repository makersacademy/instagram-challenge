<div class="center jumbotron">
  <h1> Welcome to Instagram </h1>
</div>

<% if @pictures.any? %>
  <div class="container">
    <div class="container">
      <% @pictures.each do |picture| %>
          <div class="col-md-3">
            <p> <%= link_to image_tag(picture.image.url(:thumb)), picture_path(picture) %> </p>
            <h5> <b>Name: <b><%= picture.name %>  </h5>
            <h6> <b><i>Description:</i><b></i> <%= picture.description %> </h6>
          </div>
      <%end %>
    </div>
  <% else %>

    <h3 class="text-center">
      <% if current_user %>
        <p><%= link_to "Add a post", new_picture_path %></p>
      <% else %>
      Please <%= link_to "log in", new_picture_path %> or <%= link_to "register",  new_user_registration_path %>
      to upload a picture.
    </h3>
    <% end %>
  </div>
<% end %>
