<a href="/pictures/new">Add a picture</a>

<% if @pictures.any? %>
  <% @pictures.each do |picture| %>
    <section>
      <p> Name: <%= link_to picture.name, picture_path(picture) %>  </p>
      <p> Description: <%= picture.description %> </p>
    </section>
  <%end %>

<% else %>

No pictures yet
<% end %>
