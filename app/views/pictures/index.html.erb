<% if @pictures.any? %>
  <% @pictures.each do |picture| %>
    <%= image_tag picture.image.url(:big), :class => "users_pics" %>
    <%= link_to "Like", "/likes/create", :class => "like-link" %>
    <span class="likes_count"> <%= picture.likes.count %> </span> <%= 'like'.pluralize(picture.likes.count) %>
  <% end %>
<% else %>
  No pictures yet
<% end %>

<div class='row footer-button'>
  <%= link_to "Add a picture", new_picture_path%>
</div>
