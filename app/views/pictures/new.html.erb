<% if @picture.errors.any? %>
  <section id="errors">
    <h2>
      Failure. Please inspect the following
      <%= pluralize(@picture.errors.count, "error") %>:
    </h2>

    <ul>
      <% @picture.errors.full_messages.each do |error_message| %>
      <li> <%= error_message %> </li>
      <% end %>
    </ul>

  </section>
<% end %>


<%= form_for @picture do |f| %>
  <p>
    <%= f.label      :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label     :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
