- if @pictures.any?
  - @pictures.each do |picture|
    -# = image_tag picture.image.url(:original)
    =link_to image_tag(picture.image.url(:medium), :alt=>'photo'), picture_path(picture)
    %br= picture.description
    = pluralize picture.likes.count, 'like'
    %br
- else
  %h5 No pictures yet!

=link_to 'Add picture', new_picture_path
