<div class='user-profile'>
  <div class='profile row'>
    <div class='col-md-4 profile-picture'>
      <div class='wrapper'>
        <% if current_user.profile_pic.attached? %>
          <%= image_tag current_user.profile_pic %>
        <% end %>
    </div>
  </div>

  <div class='col-md-8 basic-info'>
    <div class='user-wrapper'>
      <h2 class='username'><%= current_user.username %></h2>
      <a class='edit-profile' href='<%= edit_user_path(current_user) %>'>
        <button>Edit Profile</button>
      </a>
    </div>
    <ul class='uposts'>
      <li><span><%= @posts.length %></span> posts</li>
      <li><span>666</span> followers</li>
      <li><span>3</span> following</li>
    </ul>
    <h2 class='name'><%= current_user.name %></h2>
    <a class='website'><%= current_user.website %></a>
    </div>
  </div>
</div>

<div class='user-tabs'>
  <a class='tab active' href=''>
    <i class='fa fa-th'></i>
    POSTS
  </a>
  <a class='tab' href=''>
    <i class='fa fa-bookmark'></i>
    SAVED
  </a>
  <a class='tab' href=''>
    <i class='fa fa-tag'></i>
    TAGGED
  </a>
</div>

<div class='user-images'>
  <% @posts.each do |post| %>
    <div class='wrapper'>
      <%= link_to post_path(post) do %>
        <%= image_tag post.image %>
      <% end %>
    </div>
  <% end %>
</div>
