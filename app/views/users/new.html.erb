<h1>Sign Up</h1>

<% if @errors %>
<h2>This username or email already in use</h2>
<% end  %>

<%= form_with scope: :user, url: users_path, class: 'user-form', local: true do |form| %>
<%= form.label :name %>
<%= form.text_field :name, class: 'text-field' %>

<%= form.label :email %>
<%= form.text_field :email, class: 'text-field' %>

<%= form.label :username %>
<%= form.text_field :username, class: 'text-field' %>

<%= form.label :password %>
<%= form.password_field :password, class: 'text-field' %>

<%= form.submit 'Submit', class: 'btn-primary' %>
<% end %>