<div id='clearance'>

  <div class="sign-up-form login-form">
    <%= form_for @user, html: {class: 'new-user'} do |form| %>
    <h2 class='centered form-header brand-font'><%= t(".title") %>!</h2>
      <div class='text-field form-text'>
        <%= form.text_field :username, :type => 'name', placeholder: 'Username', required: true %>
      </div>

      <div class='text-field form-text'>
        <%= form.text_field :name, :type => 'name', placeholder: 'Name', required: true %>
      </div>

      <div class='text-field form-text'>
        <%= form.text_field :email, :type => 'email', placeholder: 'Email' %>
      </div>

      <div class='password-field form-text'>
        <%= form.password_field :password, placeholder: "Password" %>
      </div>

      <div class='file-upload centered brand-font'>
          Upload Profile Picture
        <%= form.file_field :picture, class: "upload" %>
      </div>

      <div class='submit-field'>
        <%= form.submit class: 'clear-btn submit-btn centered brand-font', value: "Let's go!" %>
      </div>
    <% end %>
  </div>
</div>
