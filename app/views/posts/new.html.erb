<div style="margin-top: 2rem;" class="container">
  <div style="border-radius:.99rem!important;" class="col-md-6 mx-auto card">
    <h1 style="padding: 15px; text-align: center;">CREATE NEW POST</h1>

    <%= simple_form_for(@post) do |post| %>
    <div class="form-group">
      <%= post.input :title, type:"text", class:"form-control", id:"title" %>
    </div>
    <div class="form-group">
    <%= post.input :body, class:"form-control", id:"exampleTextarea", rows:"3" %>
    </div>
    <div class="form-group">
    <%= post.input :pictures, type:"text", class:"form-control", id:"pictures"  %>
    </div>
    <%= post.submit class:"btn btn-outline-primary btn-block" %>
    <br>
    <% end %>

  </div>
</div>
