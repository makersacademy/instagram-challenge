<h3>Post a new bin image</h3>
<%= form_for @post, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>


    <br>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  <br>
  </div>
  <%= f.submit %>

  <% end %>
 
