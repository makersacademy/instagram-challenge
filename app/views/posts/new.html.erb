<div class="form-wrapper">
  <%= form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%=f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div class="form-group text-center">
      <%= f.label :caption %>
      <%= f.text_field :caption %>
    </div>
    <div class="form-group text-center">
      <%= f.submit %>
    </div>
  <% end %>
</div>
