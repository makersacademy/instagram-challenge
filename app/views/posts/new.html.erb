<%= form_for Post.new, url: "/posts" do |form| %>
  <%= form.file_field :image, name: "image", class: "image-upload" %><br>
  <%= form.text_field :caption, name: "caption", placeholder: "Caption", class: "caption-field" %><br>
  <%= form.submit "Create Post", class: "submit" %>
<% end %>

<%= notice %>
