<%= form_for ([current_user, current_user.posts.build]) do |form| %>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="form-group">
      <div class="input-group">
        <%= form.label :title %><br>
        <%= form.text_field :title %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <%= form.label :link %><br>
        <%= form.text_field :link %>
      </div>
    </div>

    <div class="btn">
      <%= form.submit %>
    </div>
    
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>
