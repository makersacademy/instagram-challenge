<h1>New Post</h1>


<%= form_with scope: :post, url: posts_path, local: true do |form| %>

  <p>
    <%= form.label :photo %><br>
    <%= form.file_field :photo %>
  </p>

  <p>
    <%= form.label :message %><br>
    <%= form.text_field :message %>
  </p>

  <p>
    <%= form.submit "Create Post"%>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
