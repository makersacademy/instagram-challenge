<%= form_for @post, url: {controller: "posts", action: "create"} do |form| %>
  <%= label(:caption, "Caption:") %><br>
  <%= form.text_field(:caption, :required => true) %><br>
  <%= label(:image, "Image:") %><br>
  <%= form.file_field(:image, :required => true) %><br>
  <%= form.submit :submit %>
<% end %>
