<% if @post.errors.any? %>
  <section id="errors" >
    <h2> <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved: </h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>


<div class="posts-wrapper post">
  <h4> Add new post </h4>
      <div class="image">
        <%= image_tag 'placeholder.png', id: 'image-preview', class: 'img-responsive' %>
        <%= form_for @post, html: { multipart: true } do |f| %>
          <div class="container-fluid">
            <div class="form-group text-center">
              <%= f.file_field :image, label: false, onChange: 'loadFile(event)' %>
            </div>
            <div class="form-group text-center">
              <%= f.text_field :caption, label: false, placeholder: 'Add a caption' %>
            </div>
            <div class="form-group text-center">
              <%= f.button :submit, class: 'btn-info btn-block' %>
            </div>
          </div>
        <% end %>
  </div>
</div>
