<% if current_user %>
  <% if current_user_has_liked_post(post) %>
  <%= link_to "💔", post_like_path(post.id, get_like(post)),
    remote: true,  
    method: :delete, 
    id: "delete-like-#{get_like(post).id}" %>
  <% else %>
    <%= link_to "❤️", post_likes_path(post.id), 
    remote: true, 
    method: :post, 
    id: "like-post-#{post.id}" %>
  <% end %>
<% end %>