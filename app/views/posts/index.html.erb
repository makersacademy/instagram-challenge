<section>
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Image</th> -->
      <!-- <th>Description</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @posts.each do |post| %>
    <tr>
      <td><%= User.find(post.user_id).email %></td>
    </tr>
      <tr>
        <td><%= image_tag post.image.medium.url %></td>
      </tr>
      <tr>
        <td><%= post.description %></td>
      </tr>
      <div id="post">
      <post id="post">
        <td><%= link_to 'Show', post %></td>
        <tr>
          <% if user_signed_in? && current_user.id == post.user_id %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        </tr>

        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if user_signed_in? %>
          <tr>
          </post>
        </div>
        <td><%= link_to "Comment", new_comment_path(post_id: post.id) %></td>

        <% post.comments.each do |comment| %>
        <tr>
          <td><%= comment.body %>
           </td>
        </tr>
        <% end %>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</section>


