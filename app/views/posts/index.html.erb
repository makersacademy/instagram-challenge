
<% @posts.each do |post| %>
  <div class="card text-center" style="width: 31rem;">
    <div class="card-header">
      <%= post.user_username %> 
      <p> posted <%= time_ago_in_words(post.created_at) %> ago </p>
    </div>
    <span class="card-img-top">
      <%= image_tag post.image.square.url, :class => "post_image", :style => "width: 100%" if post.image? %>
    </span>
    <div class="card-body">
      <p class="card-text"><%= post.caption %></p>
    </div>
  </div>
<% end %>
  <div>
    <button type="button" class="btn btn-default btn-lg">
      <span class="glyphicon glyphicon-plus-sign" aria-hidden="true">
        <%= link_to 'New Post', new_post_path %>
      </span>
    </button>
  </div>
  <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, new_post_path %>

