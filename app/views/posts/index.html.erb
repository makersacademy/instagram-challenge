<% if @posts.any? %>
  <% @posts.each do |post| %>
  <div class="posts-wrapper row" >
    <div class="post">
      <div class="post-head">
        <div class="name">
          Post's Username
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
      </div>
      <p class="caption">
        <%= post.caption %><br><br>
      </p>
    </div>
  </div>
  <% end %>
<br><br>
<% else %>
  <div class="posts-wrapper row"> No posts yet </div>
<% end %>
