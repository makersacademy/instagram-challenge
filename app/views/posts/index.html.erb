<% if @posts.all.any? %>
  <% @posts.all.each do |post| %>
    <p>
      <%= link_to post.caption, post_path(post) %>
    </p>
      <%= link_to 'Edit post', edit_post_path(post) %>
      <%= link_to 'Delete post', post_path(post), method: :delete %>
  <% end %>
<% else %>
  <h1>No posts yet</h1>
<% end %>

<%= link_to "Add a post", new_post_path %>
