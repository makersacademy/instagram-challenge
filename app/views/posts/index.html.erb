<div class="posts">

  <% @posts.each do |post| %>
    <% if @posts.index(post)%3 == 0 %>
      <div class="row">
    <% end %>
    <div class="post">
      <div class="col-md-4">
      <%= link_to image_tag(post.image.medium.url, class: "img-responsive") , post_path(post) %>
      </div>
    </div>
    <% if @posts.index(post)%3 == 2 %>
      </div>
    <% end %>
  <% end %>
</div>
