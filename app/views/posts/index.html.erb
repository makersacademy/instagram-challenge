<h1>Welcome to Quickgram!</h1>

<%@posts.each do |post|%>
<%=image_tag(post.image)%><br>
<%=post.caption%><br>

<%post.comments.each do |comment|%>
<%=comment.commenter%><br>
<%=comment.body%><br>
<%end%>

<h2>Add a comment:</h2>
<%= form_for([post, post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%end%>
