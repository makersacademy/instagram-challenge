<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          User
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.variant(resize_to_limit: [500, 500]), class:'img-responsive'), post_path(post) %>
      </div>
      <p class="caption">
        <%= post.caption %>
      </p>
    </div>
  <% end %>
</div>