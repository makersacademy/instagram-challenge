<% @posts.each do |post| %>
	<div class="post">
		<%= image_tag post.image.url(:high) %></br>
		<%= post.description %> posted by <%= post.user.email %></br>

		<% if current_user %>
			<span class="endorsement_count"><%= post.endorsements.count %></span><%= link_to '&#x1F496;'.html_safe, post_endorsements_path(post), id: 'heart_link', class: 'endorsements-link' %>
			<%= link_to "Comment", new_post_comment_path(post) %>
		<% else %>
			<p><%= post.endorsements.count %> &#x1F496;</p>
		<% end %>

		<ul>
			<% post.comments.each do |c|  %>
				<li> <%= c.user.email %> says: <%= c.comments %> </li>
			<% end %>
		</ul>
	</div>
<% end %>
