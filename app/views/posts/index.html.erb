<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <img src="<%=(url_for(post.image))%>" width="150px", height="150px">
        </td>
        <td>
          <%= User.where(id: post.user_id).first.username %><br>
          <%= post.description %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to 'Show', post %>
        </td>
        <td>
          <%= render partial: 'likes/form', locals: { likeable: post } %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
