<h2 class="page-heading">latest posts</h2>

<div class="postsWrapper">

  <% @posts.each do | post | %>
    <div class="post"> 
      <div class="author-bar">
        <a href="user_posts/<%= post.user.id %>"><i class="fas fa-user-circle"></i><p id="handle"><%= post.user.handle %></p></a>
      </div>
      <img src="<%= post.image %>">
      <form action="/posts/<%= post.id %>/likes" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <button class="like-btn"><i  class="heart far fa-heart"></i></button>
      </form>
      <p class="like-count"> <%= post.likes.count %> likes </p>
      <p><%= post.description %></p>
    </div>
  <% end %>

</div>
