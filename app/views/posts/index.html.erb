<h1>Instagram</h1>

<%= link_to "New Post", new_post_path %>

<% @posts.each do |post| %>
  <div id="post<% post.id %>" class="post">
    <%= image_tag post.image.url(:medium) %><br>
    <%= post.caption %>
    <div class="like">
        <%= form_for(@like, url: post_likes_path(post)) do |form| %>
        <%= form.hidden_field :post_id, :value => post.id %>
        <%= form.submit "Like", class: "button", name: "Like" %>
        <% end %>
    </div>
    <div class="likes">
        <%= post.likes.count %>
    </div><br>
  </div>
<% end %>
