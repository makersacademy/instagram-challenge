<h1>Instagram</h1>

<%= link_to "New Post", new_post_path %>

<% @posts.each do |post| %>
<p>
    <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %><br>
    <%= post.caption %><br>
    <%= link_to 'Edit Post', edit_post_path(post) %>
    <%= link_to 'Delete Post', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>
