<% if @posts.any? %>
  <% @posts.each do |post| %>
      <h2> <%= post.caption %> </h2>
      <%= link_to "Edit #{post.caption}", edit_post_path(post) %>
      <%= link_to "Delete post", post_path(post), method: :delete %>
    <% end %>
  <% else %>
  No posts yet!
  <% end %>



<%= link_to 'Add a post', new_post_path %>
