<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <span class="form-group center-block text-center">
        <%= link_to 'New Post', new_post_path, role:"button", class: "btn btn-default" %>
        <form action= "/filter" method= "get">
        <input type="text" name="tag_text" id="search" placeholder="Search">
        <button class="btn btn-default" id="search-btn" >üîç</button>
        </form>
      </span>
        <% @posts.each do |post| %>
          <div class="post">
          <p> @<%= post.user.user_name %> </p>
          <div class="picture"> <%= image_tag post.image.url(:medium), class: 'center-block' %> </div>
          <span class="likes"> <%= link_to '‚ô°', post_likes_path(post), method: 'post', class: 'like-link', id: 'like-id'%> <span class="write-comment"><%= link_to '‚úé', new_post_comment_path(post), class: 'write-comment-link' %></span><br>
            <span class="like-count"> ‚ô• <%= pluralize(post.likes.count, 'like') %></span>
          </span>
          <p> <%= post.caption %> </p>
          <% post.comments.all.each do |comment| %>
            <p> <%=comment.user.user_name%>: <%= comment.comment_text %> </p>
          <% end%>
        </div>
        <%end%>
    </div>
  </div>
</div>
