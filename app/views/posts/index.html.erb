
  <div class="posts-wrapper row">
    <div class="col-md-2 col-md-offset-5">
      <% @posts.each do |post| %>
        <div class="post">
          <div class="post-head">
            <div class="name">Frank</div>
            <div class="image center-block"><%= link_to (image_tag post.image.url(:medium), class:'img-responsive'),
              post_path(post) %></div>
            <p class="caption"><%= post.caption %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
