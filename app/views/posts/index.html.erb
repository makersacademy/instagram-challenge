<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          User
        </div>
      </div>
      <div class="image">
        <%= link_to (image_tag post.image.variant(resize_to_limit: [600, 600]), class:'img-responsive'), post_path(post) %>
      </div>
      <p class="caption">
        <%= post.caption %>
      </p>
      <p>
        Posted <%= time_ago_in_words(post.created_at) %> ago
      </p>
    </div>
  <% end %>
</div>