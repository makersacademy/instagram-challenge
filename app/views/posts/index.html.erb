<% if @posts.any? %>
  <% @posts.each do |post| %>
    #######################
    <p>Click to see comments:<%= link_to post.title, post_path(post) %></p>
    <p><%= image_tag post.image.url(:medium) %></p>
    <p><%= link_to "Delete #{post.title}", post_path(post), method: :delete %></p>
    <p><%= link_to "Comment on #{post.title}", new_post_comment_path(post) %></p>
  <% end %>
<% else %>
  No posts yet!
<% end %>
