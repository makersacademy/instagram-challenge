<link rel="stylesheet" href="posts.scss">

<h1>Shminstagram</h1>
<% if current_user %>
<p> Hello, <%= current_user.username %>!</p>
  <%= link_to "Log Out", logout_path %>
<% else %>
  <p><%= link_to "Sign Up", signup_path %> </p>
  <p><%= link_to "Log In", login_path %></p>
<% end %>
<h2>Posts</h2>
<% @posts.each do |post| %>
  <h3 class="post"><%= post.title %></h3>
  <p class="post"><%= post.body %>
  <div id="image">
      <%= image_tag post.image %>
  </div>
  <br>Posted by: <%= User.find(post.user_id).username %>
  </p>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>