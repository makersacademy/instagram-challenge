<h1>Instagram</h1>

<%= link_to "New photo", new_post_path %><br/>

<h2>Photo stream</h2>
<% @posts.each do |post| %>
  <a href="<%= url_for(post) %>">
    <img src="<%= url_for(:controller => "posts",
                          :action => "show_image",
                          :id => post.id) %>">
  </a>
  <p>
    <%= post.description %>
  </p>
  <p>
    <%= link_to "Edit post", edit_post_path(post.id) %>
  </p>
  <br/>
<% end %>
