<% if @posts.all.any? %>
  <% @posts.all.each do |post| %>
    <%= image_tag post.image.url(:thumb) %>
    <h2><%= post.description %></h2>
    <ul>
      <li>
        <%= link_to 'Like', post_likes_path(post), class: 'likes-link' %>
        <span class="likes_count"><%= post.likes.count %></span><%= ' like'.pluralize(post.likes.count) %>
      </li>
    </ul>
    <% if post.comments.any? %>
      <ul>
        <% post.comments.each do |comment| %>
          <li>
            <%= comment.thoughts %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No comments</p>
    <% end %>
    <% if post.created_by?(current_user) %>
      <h3><%= link_to 'Edit post', edit_post_path(post) %></h3>
      <h3><%= link_to 'Delete post', post_path(post), method: :delete %></h3>
    <% end %>
    <h3><%= link_to 'Write a comment', new_post_comment_path(post) %></h3>
  <% end %>
<% else %>
  <h1>There are no posts yet</h1>
<% end %>

<h2><%= link_to 'Add a post', new_post_path %></h2>