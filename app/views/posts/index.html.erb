    <% if user_signed_in? %>
      <div>
        <center>
          <%= button_to 'New post', new_post_path, method: :get %>
        </center>
      </div>
    <% end %>


    <div class="container">
      <div class="row">
        <% @posts.each do |x| %>
          <div class= "col-xl-12 d-flex justify-content-center mb-5">
            <%= link_to post_path(x), id: @posts.index(x) do %>
            <%= image_tag x.image.url, class:"img-fluid"%>
          </div>
          <% end %>
        <% end %>
      <div>
    </div>



