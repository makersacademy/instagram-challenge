<div class="container">

  <% @posts.each do |post| %>
  <div class="post-wrapper row">
    <div class="post">
      <div class="post-head">
        <div class="name">
          <%= post.user.user_name %>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive center-block'), post_path(post) %>
      </div>
      <!-- <%= image_tag post.image.url(:medium) %> -->
      <div class="caption">
        <p><%= post.caption %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
