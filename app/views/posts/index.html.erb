<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <img src="<%=(url_for(post.image))%>" width="150px", height="150px">
        </td>
        <td>
          <%= User.where(id: post.user_id).first.username %><br>
          <%= post.description %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to 'Show', post %>
          <% if post.user_id == current_user.id %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <tr>
      <td>
        <% post.comments.each do |comment| %>
        <p class="comments">
         <%= comment.body %></p>
         <%= User.where(id: comment.user_id).first.username %>
         <%= comment.created_at.to_s(:long_ordinal) %>
        <% end %>
      </td>
    </tr><br>
    <tr>
      <td>
        <%= form_for [post, Comment.new] do |form| %>
          <%= form.text_field :body %>

          <%= form.submit "Add comment" %>
        <% end %>
      </td>
    <% end %>
    </tr>

  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
