<% if @posts.any? %>
  <ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.description %>
      <%= post.likes.count %> Likes
      <%= image_tag post.image.url(:medium, timestamp: false) %>

      <%= form_for [post, @like] do |f| %>
        <%= f.submit 'Like' %>
      <% end %>
      <%= link_to 'Delete', post_path(post), method: :delete %>
    </li>
  <% end %>
  </ul>
<% else %>
No posts yet
<% end %>

<a href='/posts/new'>Post to Instantgram</a>