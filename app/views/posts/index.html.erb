<% if @posts.any? %>
  <ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.description %>
      <%= post.likes.count %> Likes
      <%= image_tag post.image.url(:medium, timestamp: false) %>
      <%= link_to 'Like', new_post_like_path(post) %>
      <%= link_to 'Delete', post_path(post), method: :delete %>
    </li>
  <% end %>
  </ul>
<% else %>
No posts yet
<% end %>

<a href='/posts/new'>Post to Instantgram</a>