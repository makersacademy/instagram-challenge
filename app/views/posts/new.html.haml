%h2 Add a pic!

= form_for @post, html: {multipart: true} do |f|
  %div{ :class=>"field" }
    = f.label :title
    %br
    = f.text_field :title
  %div{ :class=>"field" }
    = f.label :image
    %br
    = f.file_field :image
  %div{ :class=>"field" }
    = f.label :description
    %br
    = f.text_area :description
  %div{ :class=>"actions" } 
    = f.submit
