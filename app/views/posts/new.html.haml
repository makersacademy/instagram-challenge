= form_for @post, html: {multipart: true} do |f|
  = f.label :image
  %br
  = f.file_field :image
  %br
  %br
  = f.label :description
  %br
  = f.text_area :description
  %br
  = f.submit 'Post'

- if @post.errors.any?
  %section#errors
    %h2
      = pluralize @post.errors.count, "error"
      prohibited this restaurant from being saved:
    %ul
      - @post.errors.full_messages.each do |message|
        %li= message
