%html
  %body
    = image_tag @post.image.url(:medium)
    %p= @post.caption
    - @post.comments.each do |comment|
      %p= comment.comments
    = link_to 'Comment', new_post_comment_path(@post)
    = link_to 'Edit post', edit_post_path(@post)
    = link_to 'Delete post', post_path(@post), method: :delete
