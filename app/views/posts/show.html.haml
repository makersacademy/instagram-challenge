.posts-wrapper.row
  .post
    .post-head
      .name
        Stefan Liute
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
    .text-center.edit-links
      = link_to "Edit Post", edit_post_path(@post)
      |
      = link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "You sure?" }
      |
      = link_to "Back to homepage", posts_path
