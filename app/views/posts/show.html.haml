= image_tag @post.image.url(:medium)
%p= @post.description
- if @post.owned_by? current_user
  = link_to "Edit", edit_post_path(@post)
  = link_to "Delete", post_path(@post), method: :delete
- if current_user
  = link_to "Add comment", new_post_comment_path(@post)
  = form_for [@post, @comment] do |f|
    = f.label :comment
    = f.text_area :comment
    = f.submit 'Leave comment'
    .likes
      = link_to "Like", post_likes_path(@post), method: :post, class: 'likes-link'
      %span.likes_count= @post.likes.count
      = 'like'.pluralize @post.likes.count

%h3
  Comments

- if @post.comments.any?
  %ul
    - @post.comments.each do |comment|
      %li
        = comment.comment
        = comment.user.name
        = time_ago_in_words(comment.created_at)
        - if comment.owned_by? current_user
          = link_to "Delete comment", post_comment_path(@post, comment), method: :delete

  %p No comments
