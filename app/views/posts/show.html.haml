.posts-wrapper.row
  .post
    .post-head
      .name
        Marlon
    .image.center-block
      = image_tag @post.image.url(:medium)
    %p.caption
      = @post.caption
    - comments_for_post(@post, @comments).each do |comment|
      %p= comment.comment
      %p= user(comment.user_id)

    = form_for [@post, @comment], :url => post_comments_path(@post)  do |form|
      = form.label :comment
      = form.text_area :comment
      = form.submit 'Comment'
    .text-center.edit-links
      = link_to "Edit Post", edit_post_path(@post)
      |
      = link_to 'Delete Post', post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }
      |
      = link_to "Cancel", posts_path
