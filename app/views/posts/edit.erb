<div class='form-wrapper'>
  <%= form_for @post, html: { class: 'form-horizontal' } do |f| %>
  <div class='form-group text-center'>
    <%= f.text_field :caption, class: 'textbox' %>
  </div>
  <div class='form-group text-center'>
    <%= link_to 'Back', :back %>
    |
    <%= f.submit "Update", class: 'btn btn-link' %>
  </div>
  <% end %>
</div>
