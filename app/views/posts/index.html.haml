%p.text-center
  = link_to "Make a post", new_post_path, class: 'h2 text-center'

- if @posts.any?
  %section
    - @posts.reverse_each do | post |
      .section.text-center
        %h3= post.user.username
        = link_to post_path(post) do
          = image_tag post.image.url(:medium), class: 'img-responsive center-block img-rounded'
        %h3= post.title
        %p.likes
          %span.likes_count= post.likes.count
          = "Like".pluralize post.likes.count
          = link_to "Like", post_likes_path(post), class: 'likes-link'
        - if post.comments.any?
          - post.comments.reverse_each do |comment|
            = comment.thoughts
            - if user_signed_in? && current_user.id == comment.user_id
              = link_to "Edit comment", edit_post_comment_path(post, comment)
              = link_to "Delete comment", post_comment_path(post, comment), method: :delete
        - if user_signed_in? && current_user.id == post.user_id
          = link_to "Delete", post_path(post), method: :delete
        %p= link_to "Leave comment", new_post_comment_path(post)
- else
  %h2 No posts yet!