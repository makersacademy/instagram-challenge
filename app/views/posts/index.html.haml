%h1 instagram-challenge
= link_to "New Post", new_post_path

.posts-wrapper.row
  -@posts.each do |post|
    .post
      .post-head
        .name
          Chloe Verity
      .image.center-block
        =link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post)
      %p.caption
        =post.caption
