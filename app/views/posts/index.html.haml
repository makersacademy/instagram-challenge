-if @post.any?
  -@post.each do |post|
    .posts-wrapper.row
      .post
        .post-head
          .name
            %p= username(post.user.email)
        .image.center-block
          =link_to (image_tag post.image.url(:medium)), post_path(post)
        %p.caption
          = post.caption
-else
  .row
    No Posts Yet
