.container
  .row.post-list
    - if @posts.any?
      - @posts.each do |post|
        .post
          %p.post-author Posted by: #{post.user.username}
          = image_tag post.image.url(:large), class: 'post-image'
          %p.post-description= post.description
          - if post.comments.any?
            - post.comments.each do |comment|
              .post-comment
                %p #{comment.user.username} - #{comment.message}
          .post-add-comment
            = link_to 'Comment', new_post_comment_path(post), class: 'btn btn-default btn-comment'
    - else
      %h1 No posts available