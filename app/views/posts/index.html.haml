-if @post.any?
  -@post.each do |post|
    .posts-wrapper.row
      .post{id: "post_#{post.id}"}
        .post-head
          .name
            %p= username(post.user.email)
        .image.center-block
          =link_to (image_tag post.image.url(:medium)), post_path(post)
        %p.caption
          = post.caption
          - post.comments.each do |comment|
            %p= comment.comment
            %p= "&nbsp;&nbsp;&nbsp;".html_safe + username(comment.user.email)

-else
  .row
    No Posts Yet
