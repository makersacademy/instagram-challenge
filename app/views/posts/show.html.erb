<%= image_tag(@post.image.url) %>

<%= link_to "Leave comment", new_post_comment_path(@post.id) %>

<% if @comments.any? %>
  <% @comments.each do |comment| %>
    <ul>
      <%= comment.created_at.strftime('%a, %d %b %Y %H:%M:%S') %> <br>
      <%= "#{@users.find(comment.user_id).email} commented:" %>
      <%= comment.comment %>
    </ul>
  <% end %>
<% else %>
<% end %>