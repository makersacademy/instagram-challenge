<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">Amy Nicholson</div>
    </div>
    <div class="image center-block">
      <%= link_to (image_tag @post.image.url(:medium), class: "img_responsive"), post_path(@post) %>
    </div>
    <p><%= @post.caption %></p>
  </div>
</div>
