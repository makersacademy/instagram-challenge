<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        User
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @post.image.variant(resize_to_limit: [600, 600]) %>
    </div>
    <p class="caption">
      <%= @post.caption %>
    </p>
    <div class="text-center">
      <%= link_to "Cancel", posts_path %>
    </div>
  </div>
</div>
