<p>
  <strong>Caption:</strong>
  <div id="caption">
    <%= @post.caption %>
  </div>
</p>

<p>
  <strong>User:</strong>
  <div id="username">
    <%= @post.user.username %>
  </div>
</p>
<p>

  <td><%= image_tag url_for(@post.picture) %></td>
</p>

