<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@post.image.url) %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<% if user_signed_in? %> 
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
<% end %>
<% if user_signed_in? %>
  <% if current_user.id == @post.user_id %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <% end %>
  <%= link_to 'Back', posts_path %>
<% end %>