Caption: <%= @post.caption %><br />
Image: <%= image_tag @post.image.url %><br />
Likes: <%= @post.likes.count %>

<%= link_to "Like post", new_like_path(:post_id => @post.id) %>
<br />
<% if @post.comments.count > 0 %>
<ul>
  <% @post.comments.each do |comment| %>
  <%= comment.created_at %><br />
  <%= comment.content %><br />
  <%= comment.name %><br /><br />
  <% end %>
</ul>
<% else %>
No comments
<% end %>

<%= link_to "Add comment", new_comment_path(:post_id => @post.id) %>

<p>
<%= link_to "All posts", root_path %>
</p>
