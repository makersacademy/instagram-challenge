<container class="row">
  <article class="post">
    <div class="col-md-5">
      <h2><%= @post.title %></h2>
        <%= image_tag @post.image.url(:thumb) %>
        #<%= @post.tag %>
        Likes: <%= @post.likes %>
        <%= button_to "like", like_post_path(@post), {:onclick => "like", :class => 'btn like' } %>
      </div>
    </article>
  </container>
