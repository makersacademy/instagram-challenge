<div class="full-post-image"><%= image_tag @post.image %></div>
<div class="full-post-text"><%= @post.text %></div>
<div class="full-post-author"><%= @user.handle %></div>

<% @post.comments.each do |comment| %>
    <div class="full-post-comment"><%= comment.text %></div>
<% end %>

<% if session[:user_id] %>
    <%= render "comments/form" %>
<% end %>

<% if @post.user_id == session[:user_id]%>
    <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
