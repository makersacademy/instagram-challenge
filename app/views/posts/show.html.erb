<div class="posts-wrapper">
  <div class="post">
    <div class="post-head">
      <% if @post.user.id == current_user.id %>
        <p style="display:inline-block;float:right"><%= link_to "Edit", edit_post_path(@post) %>
        <%= link_to "Delete", post_path(@post), method: :delete %></p>
        <% end %>
      <div class="name" style="display:inline-block; float:left;">
        <h4><%= @post.user.username %> </h4>
        <p class="location"> London </p>
      </div>
    </div>
    <div class="image"><img class="img-responsive" src= <%= @post.image %> /></div>
    <p class="caption"><%= @post.caption %></p>
  </div>
</div>
