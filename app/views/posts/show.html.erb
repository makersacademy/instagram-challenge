<p id="notice"><%= notice %></p>

<div class="post-focus">
  <%= image_tag(@post.image, class: "post-focus-image") %>
  <div class="post-focus-right-column">
    <div class="post-focus-header-container">
      <div class="post-focus-header">
        <div class="post-author-info">
          <%= image_tag("default.jpg", class: "post-author-pic") %>
          <p class="post-author-name"><%= @post.user.username %></p>
        </div>
        <% if @post.user_id == Current.user.id %>
          <p class="post-options">
            <%= link_to 'Edit', edit_post_path(@post), class: "post-link" %> |
            <%= link_to 'Delete', @post, method: :delete, class: "post-link", data: { confirm: 'Are you sure you want to delete this post?' } %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="post-focus-body-container">
      <div class="post-focus-comments">
        <div class="post-content">
          <div class="post-focus-author-info">
            <%= image_tag("default.jpg", class: "post-author-pic") %>
            <p class="post-author-name"><%= @post.user.username %></p>
          </div>
          <p class="post-caption-text">
            <%= @post.caption %>
          </p>
        </div>
      </div>
    </div>
    <div class="post-focus-footer-container">
      <div class="post-focus-footer">
        <%= image_tag("like.png", class: "post-like-icon") %>
        <p class="post-like-count">
          23 likes
        </p>
        <p class="post-time-since">
          <%= time_ago_in_words(@post.created_at) %> ago
        </p>
      </div>
      <div class="post-focus-new-comment-container">
        <%= image_tag("smile.png", class: "post-comment-icon") %>
        <input class="post-comment-box" type="text" name="" id="" placeholder="Add a comment...">
        <button class="post-focus-comment-button">Post</button>
      </div>
    </div>
  </div>
</div>

<%= link_to '', posts_path, :class => "post-focus-overlay" %>
