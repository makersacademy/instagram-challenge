<p id="notice"><%= notice %></p>

<% if @post.image.attached? %>
  <p>
    <strong>Image:</strong>
    <br>
    <%= image_tag @post.image, :height => '300px'%>
  </p>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Likes:</strong>
  <%= @post.likes %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.first_name %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
