<p><%= @post.title %></p>
<p><%= @post.description %></p>
<%= image_tag @post.image.url(:medium) %>
<p><%= link_to "Edit #{@post.title}", edit_post_path(@post) %></p>
<p><%= link_to "Delete #{@post.title}", post_path(@post), method: :delete %></p>
<p><%= link_to "Comment on #{@post.title}", new_post_comment_path(@post) %></p>
<p>Comments:</p>
<% @comments.each do |comment| %>
<p><%= comment.thoughts %></p>
<% end %>
