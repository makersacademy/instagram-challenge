<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        Steve Dawes
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @post.image.url(:medium) %>
    </div>
    <p class="caption">
      <%= @post.caption %>
    </p>
    <div class="text-center">
      <%= link_to "Return to homepage", posts_path %>
    </div>
  </div>
</div>
