
<h3><%= @post.content%></h3>

<div class="container">
<div class='row'>
 <div class="col-md-6">
<%= image_tag @post.picture.url %>
 </div>
 <div class="col-md-6">

  <h4> Comments</h4>
  <ul>
   <% @comments.each do |comment| %>
     <li><p> <%=comment.body %></p></li>
   <% end %>
   </ul>
   <%= form_for [@post, Comment.new] do |form| %>
     <%= form.label :comment %>
     <%= form.text_field :body, class: "comment" %>
     <%= form.submit "Submit" %>
   <% end %>
 </div>
</div>
<div class='row'>
   <div class="col-md-12">

<% if @post.liked_by(current_user) %>
<%= button_to "Unlike", post_like_path(@post.id, @post.find_likes(current_user)), method: :delete, class: "like_button" %>
 <% else %>
 <%= button_to "Like", post_likes_path(@post.id), class: "like_button" %>
  <% end %>
</div>
<div class="col-md-12">

Likes count: <%= @count %>
</div>
</div>
</div>







