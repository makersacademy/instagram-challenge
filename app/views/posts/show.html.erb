<h1><%= @post.title %></h1>
<%= image_tag @post.image.url  %>

<% if @post.user_id == current_user.id %>
    <%= link_to "Edit Your Post", edit_post_path(@post) %>
    <%= link_to "Delete Your Post", post_path(@post), method: :delete %>
<% end %>

<ul class='comments'>
    <% @comments.each do |comment| %>
        <li>
            <%= comment.body %>
            <%= find_username_by_id(comment.user_id) %>
            <% if current_user.id == comment.user_id %>
                <%= link_to "Delete Comment", [@post, comment], method: :delete %>
            <% end %>
        </li>
    <% end %>
</ul>

<%= form_for [@user, @post, @comment] do |f| %>
    <%= f.label :body, "Comment" %><br/>
    <%= f.text_field :body %>
    <%= f.submit "Send" %>
<% end %>

