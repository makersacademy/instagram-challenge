<html>
<head>
  <meta charset="utf-8">
  <title>Going post'all</title>
</head>
<body>
  <h1>Gonna post y'all</h1>
  <% if @posts.all.any? %>
  <% @posts.all.each do |post|  %>
  <div class="desc">
    <%= link_to post.caption, post_path(post) %>
    <h2><%= post.description %></h2>
    <% post.comments.each do |comment| %>
    <h2>Comments: <%= comment.thoughts %></h2>
    <% end %>
  </div>
  <div class="img">
    <%= image_tag post.image.url %>
  </div>
  <div class="desc">
    <span><%= link_to "Like post", new_post_like_path(post) %></span>
    <span><%= pluralize post.likes.count, 'like' %></span>
    <ul>
      <li><p><%= link_to "Edit #{post.caption}", edit_post_path(post) %></p></li>
      <li><p><%= link_to "Review #{post.caption}", new_post_comment_path(post) %></p></li>
      <li><p><%= link_to "Delete #{post.caption}", post_path(post), method: :delete %></p></li>
    </ul>
  </div>
  <% end %>
  <% else %>
  <h1>No posts yet!</h1>
  <% end %>
  <div class="post">
    <a href="/posts/new">Add a post</a>
  </div>
</body>
</html>
