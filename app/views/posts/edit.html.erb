<div class="text-center">
  <%= image_tag @post.image.url(:web, :full) %>
</div>
<div class="form-wrapper">
  <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label 'Image' %>
        <%= f.file_field :image, :name => 'image' %>
      </div>
      <div class="form-group text-center">
        <%= f.label 'Text' %>
        <%= f.text_field :text, :name => 'text' %>
      </div>
      <div class="form-group text-center">
        <%= f.submit 'Update Post', class: 'btn-success' %>
      </div>
  <% end %>
</div>
<div class="text-center edit-links">
  <%= link_to 'Delete Post', post_path(@post), method: :delete, data: {
      confirm: 'Are you sure you want to delete this post?'
  } %>
  <%= link_to 'Cancel', posts_path %>
</div>
