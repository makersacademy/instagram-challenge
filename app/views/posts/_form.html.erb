<%= form_for @post, html: { multipart: true }, url: posts_path do |form| %>
  <div class="field">
    <p class="control">
      <%= form.label :title, class: "label" %>
      <%= form.text_area :title, maxlength: 100, class: "textarea", required: "true" %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= form.label :select_a_photo, class: "label" %>
      <%= form.file_field :photo, required: "true" %>
    </p>
  </div>
  </br>
  <div class="field">
    <p class="control">
      <%= form.submit :Upload, class: "button is-info" %>
    </p>
  </div>
<% end %>
