<% if user_signed_in? %>
	<%= form_with(model: post) do |form| %>
		<% if post.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

				<ul>
					<% post.errors.each do |error| %>
						<li><%= error.full_message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="field">
			<%= form.label :image %>
			<%= form.text_field :image %>
		</div>

		<div class="field">
			<%= form.label :caption %>
			<%= form.text_field :caption %>
		</div>

		<div class="field">
			<%= form.label :user %>
			<%= form.text_field :user %>
		</div>

		<div class="actions">
			<%= form.submit %>
		</div>
	<% end %>
<% else %>
<p>Please <%= link_to 'Sign In', new_user_session_path%> or <%= link_to 'Register', new_user_registration_path%> before making posts</p>
<%	end %>