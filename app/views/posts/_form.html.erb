  <div class="form-wrapper">
  <%= form_with model: @post, local: true do |form| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h4> Please check the
          <%= pluralize(@post.errors.count, "error") %> below:
        </h4>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if @post.image? %>
      <p>
        <%= image_tag @post.image.url %>
      </p>
    <% end %>

    <p>
      <%= form.label :image %>
      <%= form.file_field :image, id: 'upl-post-img', required: true  %>
    </p>
    <p>
      <%= form.label :description %><br/>
      <%= form.text_area( :description, cols: 80, rows: 3, id: 'post-desc') %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>