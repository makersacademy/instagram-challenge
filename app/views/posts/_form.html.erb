<div class="form-wrapper">
<%= form_for post do |f| %>
  <div class="form-group">
    <b>Choose Image</b>
    <%= f.file_field :image %>
  </div>
  <div class="form-group text-center">
    <b>Caption:</b>
    <%= f.text_field :caption %>
  </div>
  <div class="form-group text-center">
  <%= f.submit %>
</div>
<% end %>
</div>
