<%= form_for :post, url: posts_path do |form| %>
  <div class="field">
    <p class="control">
      <%= form.label :title, class: "label" %>
      <%= form.text_area :title, rows: 2, maxlength: 100, class: "textarea" %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= form.submit :submit, class: "button is-success" %>
    </p>
  </div>
<% end %>

