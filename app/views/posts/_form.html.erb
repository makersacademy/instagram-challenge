
    <div class="form-wrapper">

      <%= form_for @post, local: true do |form| %>


      <p>
        <%= form.label :image %><br>
        <%= form.file_field :image %>
      </p>

      <p>
        <%= form.label :caption %><br>
        <%= form.text_field :caption %>
      </p>

      <p>
        <%= form.submit %>
      </p>

    <% end %>

  </div>
