<div class='form-wrapper'>
  <%= form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <div class='form-group'>
    <%= f.file_field :image %>
  </div>
  <div class='form-group text-center'>
    <%= f.text_field :caption, placeholder: 'say something witty', class: 'textbox' %>
  </div>
  <div class='form-group text-center'>
    <%= f.text_field :all_tags, placeholder: 'tags separated with commas', class: 'textbox' %>
  </div>
  <div class='form-group text-center'>
    <%= f.submit "Add", class: 'btn btn-link' %>
  </div>
  <% end %>
  <div class='text-center'>
    <% if @post.errors.any? %>
      <% @post.errors.full_messages.each do |msg| %>
        <div><%= msg %></div>
      <% end %>
    <% end %>
  </div>
</div>
