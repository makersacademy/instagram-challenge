<div class="container">
  <div class="row">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-6">
            <%= "Created on: #{@comment.created_at.strftime('%d/%m/%y')} (by TBD)" %>
          </div>
          <div class="col-xs-6 text-right">
            <%= "Last updated on: #{@comment.updated_at.strftime('%d/%m/%y')}" %>
          </div>
        </div>
      </div>
      <div class="panel-body">
          <%= @comment.comment%>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-xs-6">
        <%= link_to "Edit comment", edit_post_comment_path(@post, @comment) %>
      </div>
      <div class="col-xs-6">
        <%= link_to "Delete comment", post_comment_path(@post, @comment), method: :delete %>
      </div>
    </div>
  </div>
</div>
