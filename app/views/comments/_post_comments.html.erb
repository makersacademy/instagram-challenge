<h3><%= @post.comments.count %> Comments</h3>
<% @post.comments.each do |comment| %>
  <div>
    <strong><%= comment.user.username %></strong>
    <% if current_user == @post.user %>
    <em><%= link_to 'Delete', post_comment_path(@post, comment), method: :delete %></em>
    <% end %>
    <br>
    <p><%= comment.body %></p>
  </div>
<% end %>
