<div id="comments<%= post.id %>">
  <div class="user-name">
    <%= comment.user.username %>
  </div>
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <% if comment.user == current_user %>
    <%= link_to 'Delete', post_comment_path(post, comment), method: :delete, id: "delete-#{comment.id}", data: { confirm: "Are you sure?" } %>
  <% end %>
</div>
