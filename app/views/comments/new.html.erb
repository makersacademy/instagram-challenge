<% if @comment.errors.any? %>
  <section id="errors" >
    <h2> <%= pluralize(@comment.errors.count, "error") %> prevented this comment from being posted: </h2>
    <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>


<%= form_for [@image, @comment] do |f| %>
  <%= f.label :comment %>
  <%= f.text_area :comment %>
  <%= f.submit 'Comment' %>
<% end %>
