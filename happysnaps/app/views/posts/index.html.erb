<h1>HappySnaps</h1>
<a href='posts/new/'>Add a post</a>
<% if @posts.any? %>
  <% @posts.each do |post| %>
    <p><%= link_to (image_tag post.image.url), post_path(post) %></p>
    <p><%= post.caption %></p>
    <% post.comments.each do |comment| %>
      <p><%= comment.text %></p>
    <% end %>
    <%= form_for [post, post.comments.new] do |f| %>
      <%= f.text_field :content, placeholder: 'Add a comment...' %>
      <%= f.submit "Add comment" %>
      <% end %>
    <p><%= link_to 'Edit Post', edit_post_path(post)%> |
    <%= link_to "Delete Post", post_path(post), method: :delete %></p>
    <% end %>
<% else %>
  <p>No posts yet</p>
<% end %>
