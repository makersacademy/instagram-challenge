<% @posts.each do |post| %>
  <div class="post">
    <div class="post-head">
      <div class="name">
        Steve Bobs
      </div>
    </div>
    <div class="image center-block">
      <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
    </div>
    <div class="caption">
      <%= post.caption %>
    </div>
  </div>

<% end %>
