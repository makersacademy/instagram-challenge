<html>
  <head>
    <meta charset="utf-8" />
    <title>Chitter</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/posts" class="nav-item nav-link">Posts</a>
      <a href="/login">Login</a>
      <a href="/signup" class="active">Sign up</a>
    </div>

    <form id="newUser" action="/signup" method="POST">
      <div class="box">
        <h1>Sign up</h1>
        <div>
          <% if(errors.length > 0) { %> <%errors.forEach((item) => { %>
          <div class="alert-danger"><%= item %></div>
          <%})%> <%}%>
        </div>
        <input
          type="text"
          id="username"
          name="username"
          class="username"
          placeholder="username"
        />
        <br />
        <input
          type="email"
          id="email"
          name="email"
          class="email"
          placeholder="e-mail"
        />
        <br />
        <input
          type="password"
          id="password"
          name="password"
          class="password"
          placeholder="password"
        />
        <br />
        <input type="submit" value="Sign up" class="btn" />
      </div>
    </form>
  </body>
</html>
