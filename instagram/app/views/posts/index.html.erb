<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<dl>
<% @posts.each do |post| %>
        <dt><img src="<%=(url_for(post.image))%>"></dt>
        <dd><%= post.caption %></dd>
        <dd><%= post.email %></dd>
        <dd><%= link_to 'Show', post %></dd>
    <% end %>
</dl>

