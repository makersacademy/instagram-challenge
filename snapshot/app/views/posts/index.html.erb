<div class="container">
  <div class="row">
    <div class="post-wrapper">
      <% if @posts.any? %>
      <% @posts.reverse_each do |post| %>
      <div class="post">
        <div class="post-head">
          <%= post.user.user_name %>
          <div id="time-ago">
          <%= distance_of_time_in_words(post.created_at, DateTime.now) %> ago
          </div>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to image_tag(post.image.url(:medium)), post_path(post) %>
        <p class="caption">
          <strong><%= post.user.user_name %></strong>
          <%= post.caption %>
        </p>
      </div>
      <% end %>
      <% else %>
        <div class="no-photos"
          <h2>OMG, there are no photos yet!</h2>
        </div>
      <% end %>
    </div>
  </div>
</div>
