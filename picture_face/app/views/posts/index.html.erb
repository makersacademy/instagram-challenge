<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h3><%= link_to post.title, post_path(post) %></h3>
    <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post), class: 'img' %><br>

    <%= '+' + post.likes.count.to_s %><br>

    <%= post.caption %><br>

    <% post.last_three_comments.each do |comment| %>

      <strong><%= comment.user.email %></strong><br>
      <%= comment.comment %>

    <% end %>
    <%= link_to "Like", post_likes_path(post), :method => :post %>
    <%= link_to "Comment", new_post_comment_path(post) %>

  <% end %>
<% else %>
  <h1>No posts yet</h1>
<% end %>

<%= link_to 'Make a Post', new_post_path %>