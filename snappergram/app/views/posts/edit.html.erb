<div style="text-align: center; padding-top: 50px;">
  <%= image_tag @post.image.url(:medium) %>
</div>
<div class="form-wrapper">
<%= simple_form_for @post do |f| %>
  <div class="form-group">
    <%= f.input :image %>
  </div>
  <div class="form-group">
    <%= f.input :caption %>
  </div>
  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
