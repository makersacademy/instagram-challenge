<div class="form-wrapper">
  <%= simple_form_for @post do |f| %>
    <div class="form-group">
      <%= f.input :image %>
    <div class="form-group" style="text-align: center;">
      <%= f.input :caption %>
    </div>
    <div class="form-group" style="text-align: center;">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
