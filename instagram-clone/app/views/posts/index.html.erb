<h1>Main Feed</h1>

<% if @posts %>
  <% @posts.each do |post| %>
    <p><%= image_tag(post.image) %></p>
    <p><%= post.description %></p>
    <%= link_to 'edit description', "/posts/#{post.id}/edit" %>
    <%= link_to 'delete', "/posts/#{post.id}", method: :delete %>
  <% end %>
<% else %>
  <p>No posts in the world yet..</p>
<% end%>