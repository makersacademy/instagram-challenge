<div id='navbar'>
  <%= link_to 'Home', '/', class: 'navlink' %>
</div>

<div id='container'>
  <h1 id='heading'>Log In</h1>

  <%= form_for :session do |f| %>
    <%= f.text_field :email, name: 'email', required: true, class: 'sign-up-field', placeholder: 'Email' %><br />
    <%= f.password_field :password, name: 'password', required: true, class: 'sign-up-field', placeholder: 'Password' %><br />
    <%= f.submit :'Log in', name: 'log_in' %><br />
  <% end %>

  <% if session.delete :invalid_login %><p id='error-message'>Invalid username or password</p><% end %>
</div>
